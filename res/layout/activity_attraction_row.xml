<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView 
		android:id="@+id/rectimage" 
		android:layout_height="96dp" 
		android:layout_width="7dp" 
		android:background="@drawable/attraction_rect" />
    
    <ImageView
        android:layout_toRightOf="@id/rectimage"
        android:id="@+id/thumbnail"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/placeholder" />
    
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/thumbnail"
        android:textSize="20dp"
        android:layout_weight="1"
        android:layout_marginRight="5dp" />

    <ImageView
        android:id="@+id/sydExploreIcon"
        android:background="@drawable/sydexplorelogo"
        android:layout_height="20dp"
        android:layout_width="20dp" 
        android:layout_below="@+id/name"
        android:layout_toRightOf="@+id/thumbnail"
        android:layout_marginRight="10dp"/>
    
    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_toRightOf="@id/sydExploreIcon"
        android:layout_marginRight="30dp" />
    
	<TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:padding="3dp"
        android:textSize="12dp" 
        android:textColor="@drawable/white"
        android:background="@drawable/weird_blue"/>
	
    <ImageView
        android:id="@+id/arrow"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/arrow487_grey" />
    
</RelativeLayout>
